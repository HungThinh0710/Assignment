<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:background="#007D39"
            android:gravity="center"
            android:text="Các kiểu lập trình sự kiện"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <TextView
                android:layout_width="76dp"
                android:text="Số a"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtSoA"
                android:layout_width="347dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Số B"
                android:textStyle="bold" />
            <EditText android:id="@+id/edtSoB"/>
        </TableRow>
        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:background="#007D39"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
        <TableRow>
            <Button
                android:onClick="onclickxml"
                android:layout_span="2"
                android:layout_width="wrap_content"
                android:text="OnCLick XML"
                tools:ignore="OnClick" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btnAnonymous"
                android:layout_span="2"
                android:layout_width="wrap_content"
                android:text="Anonymous Listener"/>
            </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btnActivity"
                android:layout_span="2"
                android:layout_width="wrap_content"
                android:text="Activity is listener "/>
            </TableRow>
    </TableLayout>
</RelativeLayout>